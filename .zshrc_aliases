	mkd () {
		mkdir "$1"
		cd "$1"
		}

### diskutil erase function
	### $1 is the volume name
	### $2 is the voluem path

	de () {
		diskutil eraseDisk HFS+ "$1" /dev/disk"$2"
		}

	dku () {
		diskutil unmountDisk /dev/disk"$1"
	}


### cheat.sh command dictionary ###
	ch () {
		curl cht.sh/"$1"
	}

	bak () {
		cp "$1" "$1".bak
	}

