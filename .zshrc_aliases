#* SheBang here enables syntax highlighting in vscode
#* alias and function source file

alias ll='ls -alh'
alias buu='brew update && brew upgrade && brew upgrade --cask'
alias rmf='rm -rf'
alias srz='exec zsh'
alias ls='lsd'
alias dkl='diskutil list'
