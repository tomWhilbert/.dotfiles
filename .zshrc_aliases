### Git aliases ###
alias g='git'
alias ga='git add'
alias gaa='git add --all'
alias gb='git branch'
alias gco='git checkout'
alias gst='git status'
alias gc='git commit -m'


### Functions ###

   	lazyg ()
		{
		git add .
		git commit -a -m "$1"
		git push -u origin master
		}

	mkd () {
		mkdir "$1"
		cd "$1"
			}

