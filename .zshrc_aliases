#!/bin/bash  
#* ^ not a bash script #! enables syntax highlighting in vscode

#* Alias and function source file

alias ll='ls -alh'
alias lld='ls -l | grep '^d''
alias llf='find . -maxdepth 1 -type f'
alias py='python3'
alias rmf='rm -rf'
alias srz='source .zshrc'
alias ls='lsd'
alias hs='history 1'
alias shut='sudo shutdown -h now'
alias rp='realpath . | pbcopy'
alias png='ping -c 3'
alias admin='dseditgroup -o checkmember -m $USER admin'
alias lsh="ls -a | grep '^\.'"
alias lsdir="ls -lah | grep '^d'"
alias dig='dig +nocmd +noall +answer'
alias ip='Get-IP-macOS.sh'
alias stoc='stat -f %Mp%Lp'
alias -g G='| grep -i'
alias -s {yml,yaml,conf,md,txt}=code
alias zrc='code $HOME/.zshrc'
alias zra='code $HOME/.zshrc_aliases'
alias zrf='code $HOME/.zshrc_functions'
alias grep='grep --color'
alias zed='code $HOME/zsh.code-workspace'
alias nos='code $HOME/NOS-220.code-workspace'
alias Nos='cd $HOME/Nextcloud/NOS-220-Linux-II'


#* RClone commands 
