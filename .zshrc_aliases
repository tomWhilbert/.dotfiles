alias hs='history 1'
alias shut='sudo shutdown -h now'
alias rp='realpath . | pbcopy'
alias png='ping -c 3'
alias admin='dseditgroup -o checkmember -m $USER admin'
alias lsh="ls -a | grep '^\.'"
alias lsdir="ls -lah | grep '^d'"
alias dig='dig +nocmd +noall +answer'
