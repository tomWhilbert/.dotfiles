# alias and function source file

alias ll='ls -alh'
alias mss='mysql.server start'
alias py='python3'
alias rmf='rm -rf'
alias srz='source .zshrc'
alias adk='ssh-add -K ~/.ssh/id_rsa'  # add key to keychain
alias ls='lsd'
alias ds='diskutil'
alias hs='history 1'
alias zbk='$HOME/.dotfiles/launchd-config-files/configBackup.sh'
alias pcp='pbcopy'
alias cl='clear'

### Git aliases ###
alias g='git'
alias ga='git add'
alias gaa='git add --all'
alias gb='git branch'
alias gco='git checkout'
alias gst='git status'
alias gc='git commit -m'
alias gpo='git push -u origin'
alias gp='git pull'


### Functions ###

   	lazyg ()
		{
		git add .
		git commit -a -m "$1"
		git push -u origin master
		}

	mkd () {
		mkdir "$1"
		cd "$1"
			}

