#!/bin/bash  
###* Alias and function source file ###

alias ls='exa'
alias l='exa --long --all --icons'
alias lg='l -g'
alias lsh="ls -a | grep '^\.'"
alias ltr='exa --tree --level=2 --long'
alias lr='exa --recurse'
alias lt='exa --long --all -snew'
alias lw='exa --all'
alias lsh='l -d .??*' #* list dot/hidden files
alias lsd="l -D"
alias rmf='rm -rf'
alias srz='exec zsh'
alias hs='history 1'
alias png='ping -c 3'
alias grep='grep -i --color'
alias rp='realpath . | wl-copy'
alias wesync='ssh -L 8385:localhost:8384 we'
alias cat='bat'
alias tree='tree -L 2 -C'
alias tml='tmux ls'
alias tmn='tmux new-session -t'
alias lb='/usr/bin/lsblk'
alias lbf='/usr/bin/lsblk -f'

#* Arch/Linux specific aliases
alias reflect='sudo reflector --verbose --latest 5 --sort rate --save /etc/pacman.d/mirrorlist'
alias sudo='sudo ' #* allows sudo to accept an alias as an argument
alias lspac="expac --timefmt='%Y-%m-%d %T' '%l\t%n' | sort | tail -n"
alias getdns='getent ahostsv4'
alias inform='sudo informant'
alias pacv="pacman -Qq | fzf --preview 'pacman -Qil {}' --layout=reverse --bind 'enter:execute(pacman -Qil {} | less)'"
alias stoc='stat -c %a'

#* systemd
alias sc='systemctl'
alias scs="systemctl status"
alias scrn='systemctl list-units -t service --state running'
alias scen='systemctl list-unit-files --state enabled'

#* Network Manager 
alias ntu='nmcli c up NETTECH'
alias ntd='nmcli c down NETTECH'
alias wguku='nmcli con up mlvd-gb4'
alias wgukd='nmcli con down mlvd-gb4'
alias ncs='nmcli connection show'
alias netnice='nmcli -p device show'

#* rclone aliases
alias rclr='rclone listremotes'
alias rc='rclone'
alias rcgds='rclone copy --max-age 24h --no-traverse /$HOME/GoogleDrive/Secure gdS: -P'
alias rcld='rclone lsd'
alias rclsf='rclone lsf --max-depth'

#* Git aliases 
alias g='git'
alias ga='git add'
alias gaa='git add --all'
alias gb='git branch'
alias gco='git checkout'
alias gst='git status'
alias gc='git commit -m'
alias gpo='git push -u origin'
alias gp='git pull'

# Network utils
alias network.ports='netstat -a -n | grep -i "LISTEN "'
alias network.connections='lsof -l -i +L -R -V'
alias network.established='lsof -l -i +L -R -V | grep ESTABLISHED'
alias nq='nmap -sn 192.168.0.0/24'
alias wgu='sudo wg-quick up /etc/wireguard/mullvad-us167.conf'
alias wgd='sudo wg-quick down /etc/wireguard/mullvad-us167.conf'

#* btrfs
alias br='sudo btrfs'
