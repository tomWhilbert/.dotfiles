#!/bin/bash  
#* ^ not a bash script #! enables syntax highlighting in vscode

#* Alias and function source file

alias ll='ls -alh'
alias lld='ls -l | grep '^d''
alias py='python3'
alias rmf='rm -rf'
alias srz='source .zshrc'
alias ls='lsd'
alias hs='history 1'
alias zbk='$HOME/.dotfiles/Scripts/configBackup.sh'
alias vm='VBoxManage startvm webdev --type headless && ssh lamp'
alias shut='sudo shutdown -h now'
alias png='ping -c 3'

#* Arch specific aliases
alias sbz='systemctl start sabnzbd@tom.service'
alias tr='trizen'
alias tru='trizen -Syu'
alias sup='sudo pacman'
alias reflect='sudo reflector --verbose --latest 5 --sort rate --save /etc/pacman.d/mirrorlist'
alias sudo='sudo ' #* allows sudo to accept an alias as an argument
alias sc='systemctl'
alias rp='realpath . | wl-copy'
alias lastpac="expac --timefmt='%Y-%m-%d %T' '%l\t%n' | sort | tail -n 20"


#* rclone aliases
alias rcs='rclone sync OneDrive:ABTech-IT /$HOME/OneDrive-RClone/ -P'
alias rclr='rclone listremotes'
alias rc='rclone'
alias rcod='rclone copy --max-age 24h --no-traverse /$HOME/OneDrive-RClone/ od: -P'  

#* Git aliases 
alias g='git'
alias ga='git add'
alias gaa='git add --all'
alias gb='git branch'
alias gco='git checkout'
alias gst='git status'
alias gc='git commit -m'
alias gpo='git push -u origin'
alias gp='git pull'

### Functions ###

   	lazyg ()
		{
		git add .
		git commit -a -m "$1"
		git push -u origin master
		}

	mkd () {
		mkdir "$1"
		cd "$1"
		}


### cheat.sh command dictionary ###
	ch () {
		curl cht.sh/"$1"
	}

	bak () {
		cp "$1" "$1".bak
	}

	wp () {
		cd $HOME/Scripts/Walk-and-Pull/
		./walk-and-pull.sh
		cd ~
	}
