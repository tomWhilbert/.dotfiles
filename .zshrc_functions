digab () {
	dig @10.60.20.20 "$1".asheville.cc.nc.us
	
}
	
hostab () {
	BLUE='\033[0;34m'
	addr=$(host "$1".asheville.cc.nc.us)
	addr2=$(echo "$addr" | cut -d' ' -f4)
	printf "\n"
	echo "$BLUE $addr2"
	}

chks () {
		echo "$1" "$2" | shasum -a 256
}
#* param 1 is the file hash sum, param 2 is the target file

