#!/bin/bash
#* Zsh Function File
#* Functions ###

   	lazyg ()
		{
		eval 'ssh-agent -s'
		ssh-add -D
		ssh-add $HOME/.SSH/github

		git add --all
		git commit -m "$@"
		git push -u origin "$@"
		}

	mkd () {
		mkdir "$@"
		cd "$@"
		}

#* diskutil erase function
	### $1 is the volume name
	### $2 is the voluem path
	de () {
		diskutil eraseDisk HFS+ "$1" /dev/disk"$2"
		}

	dku () {
		diskutil unmountDisk /dev/disk"$1"
	}

#* cheat.sh command dictionary ###
	ch () {
		curl cht.sh/"$1"
	}

	bak () {
		cp "$1" "$1".bak
	}
   
#* SSH GitHub authentication fix
	ghssh () {
		eval 'ssh-agent -s'
		ssh-add -D
		cd $HOME/.SSH/
		ssh-add github
		cd $OLDPWD
	}

	#* Disk Usage, Sorted by Size
	dus () {
		du -sh "$1"/* | sort -h
	}

	#* Realpath a file
	rpf () {
		realpath "$1" | pbcopy
	}

	#* RClone Functions
	rcld () {
		rclone lsd "$1"
	}
	rclf () {
		rclone lsf "$1"
	}