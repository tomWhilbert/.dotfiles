psg () {
	ps aux | grep "$1"
	}
	
hsg ()  {
	hs | grep "$1"
}

#* Group Membership Lookups
checkmember () {
	dseditgroup -o checkmember -m "$1" "$2"
}

#* enable bat features while using the help command.
help() {
    "$@" --help 2>&1 | bathelp
}

pysrv () {
	BLUE='\033[0;34m' 
	BIGreen='\033[1;92m' 
	BIYellow='\033[1;93m'
	NC='\033[0m'
	ip4=$(scutil --nwi | grep address | cut -d':' -f2)
	printf "\n"
	echo "$BLUE Connect @ $BIGreen $ip4:8000"
	printf "\n"
	echo "$BIYellow Control + C to end session"
	echo "$NC" 
	python3 -m http.server
}

#* Symmetric file encryption (AES 128 is the default, this increases it to 256), param 1 is the target file:
gpgsym () {
	gpg --symmetric --cipher-algo AES256 "$1"
}


#* Create a four word password using powershell
pow4 () {
	cd /Users/thomaswhilbert/Library/CloudStorage/OneDrive-A-BTech.Comm.College/Documents/Password-scripts/ || exit
	pwsh four-word-passwords.ps1 > pow4.file
	sed -n '6,25p' pow4.file > pow4.file.new | sort -R
	awk 'NR==1 {print $1}' pow4.file.new | pbcopy
	rm pow4*
	cd "$HOME" || exit
	}