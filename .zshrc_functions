#!/bin/bash
#* Zsh Function File
#* Functions ###
lazyg ()
		{
		eval 'ssh-agent -s'
		ssh-add -D
		ssh-add $HOME/.ssh/gnArch

		git add --all
		git commit -m "$1"
		git push -u origin "$2"
		}

	mkd () {
		mkdir "$1"
		cd "$1"
		}

#* cheat.sh command dictionary ###
	ch () {
		curl cht.sh/"$1"
	}

	bak () {
		sudo cp "$1" "$1".bak
	}
   
#* SSH GitHub authentication fix
	ghssh () {
		eval 'ssh-agent -s'
		ssh-add -D
	    cd $HOME/.ssh/
		ssh-add gnArch
		cd $OLDPWD
	}

	#* Disk Usage, Sorted by Size
	dus () {
		du -sh "$1"/* | sort -h
	}

	#* Realpath a file
	rpf () {
		realpath "$1" |  xclip -sel clip
	}

	#* RClone Functions
	# rcld () {
	# 	rclone lsd "$1"
	# }
	rclf () {
		rclone lsf "$1"
	}

	#* Nmap get all ips on local network
	ips () {
		nmap -sn 192.168.0.0/24 | awk '/Nmap scan/{gsub(/[()]/,"",$NF); print $NF > "nmap_scanned_ips"}'
		cat nmap_scanned_ips
	}

#* Add color to less
man() {
    LESS_TERMCAP_md=$'\e[01;31m' \
    LESS_TERMCAP_me=$'\e[0m' \
    LESS_TERMCAP_se=$'\e[0m' \
    LESS_TERMCAP_so=$'\e[01;44;33m' \
    LESS_TERMCAP_ue=$'\e[0m' \
    LESS_TERMCAP_us=$'\e[01;32m' \
    command man "$@"
}